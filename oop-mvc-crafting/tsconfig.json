{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "sourceMap": true,

    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,

    "noEmitOnError": true,
    "strict": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
